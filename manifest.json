{
  "manifest_version": 3,
  "name": "Blue tabs",
  "version": "1.0",
  "description": "A custom tab switcher popup with fast navigation",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "sessions",
    "topSites",
    "downloads",
    "system.display"
  ],
  "host_permissions": [
    "https://search.brave.com/*",
        "https://api.groq.com/*"
  ],
  "web_accessible_resources": [{
    "resources": ["hotpages.json"],
    "matches": ["<all_urls>"]
  }],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["instant-jump.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "commands": {
    "toggle-switcher": {
      "suggested_key": {
        "default": "Alt+T"
      },
      "description": "Toggle Blue tabs"
    }
  },
  
  "options_page": "settings.html",
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}